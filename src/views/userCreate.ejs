<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <div class="mobile-container">
      <header><%- include('partials/header') %></header>
      <h1 class="likes__header">Maak een account</h1>
      <form action="/users" method="POST" enctype="multipart/form-data" class="create_form">
        <input type="text" name="name" placeholder="Naam" />
        <input type="password" name="wachtwoord" placeholder="Wachtwoord" />
        <input type="radio" id="student" name="accountType" value="student">
        <label for="male">Student</label><br>
        <input type="radio" id="company" name="accountType" value="company">
        <label for="female">Bedrijf</label><br>
        <input type="text" name="study" placeholder="Studie/bedrijf" />
        <input type="text" name="message" placeholder="Bericht" />
        <input type="text" name="interests" placeholder="Intresses" />
        <input type="number" name="age" placeholder="Leeftijd" />
        <input type="hidden" name="status" value="?" />
        <input type="file" name="avatar" />
        <button type="submit">Verzend</button>
      </form>
      <footer><%- include('partials/footer') %></footer>
    </div>
  </body>
</html>
